<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteEditActivity"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <Button

            android:paddingHorizontal="11dp"
android:background="@color/plure"
            android:paddingVertical="18dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>

        <TextView

            android:paddingHorizontal="11dp"
            android:text="Done"
            android:textColor="@color/plure"
            android:paddingVertical="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginBottom="10dp"
            android:lineHeight="41dp"
            android:fontFamily="400"
            android:letterSpacing="0.41"
            android:textSize="34dp"
            android:layout_marginStart="10dp"
            android:text="Notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            />

        <EditText
            android:textSize="17dp"
            android:drawableStart="@drawable/ic_searchicon"
android:drawablePadding="10dp"
android:background="@drawable/inputerch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_width="8dp"
        android:layout_height="8dp"/>
    <TextView
        android:layout_weight="4"
        android:layout_gravity="center"
android:gravity="start"
        android:layout_marginBottom="7dp"
        android:textSize="17dp"
android:textFontWeight="600"
        android:layout_marginStart="10dp"
        android:text="@string/note_app_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        />
    <TextView
        android:layout_weight="1"
        android:gravity="start"
        android:layout_gravity="center"
        android:text="18/06/12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
        <TextView
            android:layout_marginBottom="7dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:text="Top Things To See During A Holiday In Hong Kong and Many other places."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            />
        <TextView
            android:textSize="16dp"
            android:paddingTop="7dp"
            android:layout_marginStart="10dp"
            android:text="@string/app_w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            />



    </LinearLayout>

</LinearLayout>
